{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "ES2022",
      "DOM"
    ],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "preserve",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "types": [
      "node"
    ],
    "skipLibCheck": true,
    "allowJs": false,
    "noEmit": true
  },
  "include": [
    "src",
    "backend/server.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
